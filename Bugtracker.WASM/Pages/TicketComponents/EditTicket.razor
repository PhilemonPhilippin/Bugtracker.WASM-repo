<h3>Edit a ticket</h3>

<EditForm Model="@EditedTicket" OnValidSubmit="@SubmitEdit">
    <DataAnnotationsValidator/>

    <label for="Title">
        Title: @if (_displayTitleTaken)
        {
            <span class="text-danger"> /!\ This title is already taken.</span>
        }
    </label>
    <InputText id="Title" @bind-Value="@EditedTicket.Title" class="form-control" />

    <label for="Status">
        Status:
    </label>
    <InputNumber id="Status" @bind-Value="@EditedTicket.Status" class="form-control" />

    <label for="Priority">
        Priority:
    </label>
    <InputNumber id="Priority" @bind-Value="@EditedTicket.Priority" class="form-control" />

    <label for="Type">
        Type:
    </label>
    <InputText id="Type" @bind-Value="@EditedTicket.Type" class="form-control" />

    <label for="Description">
        Description:
    </label>
    <InputText id="Description" @bind-Value="@EditedTicket.Description" class="form-control" />

    <label for="SubmitMember">
        Submit member:
    </label>
    <InputNumber id="SubmitMember" @bind-Value="@EditedTicket.SubmitMember" class="form-control" />

    <label for="AssignedMember">
        Assigned member:
    </label>
    <InputNumber id="AssignedMember" @bind-Value="@EditedTicket.AssignedMember" class="form-control"/>

    <label for="Project">
        Project:
    </label>
    <InputNumber id="Project" @bind-Value="@EditedTicket.Project" class="form-control" />
    
    
     <button type="submit" class="btn btn-warning">Confirm edit</button>
     <button @onclick="OnCancel" class="btn btn-primary">Cancel</button>
     <ValidationSummary/>
</EditForm>