<h2 class="mt-3">Tickets list</h2>
<button @onclick="DisplayAddTicketDialog" class="btn @((_displayAddTicketDialog) ? "btn-secondary" : "btn-success") mt-2">Add Ticket</button>
@if (_tickets.Count == 0)
{
    <span class="mt-2">Loading tickets list...</span>
}
else
{
    <table class="table table-striped mt-2">
        <thead class="table-primary">
            <tr>
                <th>Title</th>
                <th>Status</th>
                <th>Priority</th>
                <th>Submit time</th>
                <th>Project</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (TicketModel ticket in _tickets)
            {
                <tr>
                    <td>@ticket.Title </td>
                    <td>
                        @switch (ticket.Status)
                        {
                            case 1:
                                @:To-do
                                break;
                            case 2:
                                @:In progress
                                break;
                            case 3:
                                @:Stuck
                                break;
                            case 4:
                                @:Complete
                                break;
                        }
                    </td>
                    <td>
                        @switch (ticket.Priority)
                        {
                            case 1:
                                @:High
                                break;
                            case 2:
                                @:Medium
                                break;
                            case 3:
                                @:Low
                                break;
                        }
                    </td>
                    <td>@ticket.SubmitTime</td>
                    <td>
                        @if (_projects.Count != 0)
                        {
                            @_projects.Where(project => project.IdProject == ticket.Project).SingleOrDefault().Name
                        }
                    </td>
                    <td>
                        <button class="btn @((ticket.IdTicket == _ticketTarget.IdTicket && _displayTicketDetailsDialog) ? "btn-secondary":"btn-primary")"
                        @onclick="() => DisplayTicketDetailsDialog(ticket)">
                            <img src="/custom-icons/arrows-angle-expand.svg" alt="Ticket Details" />
                        </button>

                        <button class="btn @((ticket.IdTicket == _ticketTarget.IdTicket && _displayEditTicketDialog) ? "btn-secondary":"btn-warning") ms-1"
                        @onclick="() => DisplayTicketEditDialog(ticket)">
                            <img src="/custom-icons/pen.svg" alt="Edit Ticket" />
                        </button>

                        <button class="btn btn-danger ms-1" @onclick="() => DeleteTicket(ticket)">
                            <img src="/custom-icons/trash3.svg" alt="Delete Ticket" />
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
@if (_displayAddTicketDialog)
{
    <AddTicket OnCancel="@CloseAddDialog" OnConfirm="@RefreshTicketsList" />
}
else if (_displayTicketDetailsDialog)
{
    <DetailsTicket OnCancel="@CloseDetailsDialog" TicketTarget="@_ticketTarget" />
}
else if (_displayEditTicketDialog)
{
    <EditTicket OnCancel="@CloseEditDialog" OnConfirm="@ConfirmTicketEdit" TicketTarget="@_ticketTarget" />
}