<h2 class="mt-2">Display tickets</h2>



<button @onclick="DisplayAddTicketDialog" class="btn btn-primary">Add Ticket</button>
@if (_tickets.Count == 0)
{
    <span class="mt-2">Loading tickets list...</span>
}
else
{
    <table class="table table-striped mt-2">
        <thead class="table-primary">
            <tr>
                <th>Title</th>
                <th>Status</th>
                <th>Priority</th>
                <th>Submit time</th>
                <th>Project</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (TicketModel ticket in _tickets)
            {
                <tr>
                    <td>@ticket.Title </td>
                    <td>@ticket.Status</td>
                    <td>@ticket.Priority</td>
                    <td>@ticket.SubmitTime</td>
                    <td>@ticket.Project</td>
                    <td>
                        <button class="btn btn-primary" @onclick="() => DisplayTicketDetailsDialog(ticket)">
                            <img src="/custom-icons/arrows-angle-expand.svg" alt="Project Details" />
                        </button>

                        <button class="btn btn-warning ms-1" @onclick="() => DisplayTicketEditDialog(ticket)">
                            <img src="/custom-icons/pen.svg" alt="Edit Ticket" />
                        </button>

                         <button class="btn btn-danger ms-1" @onclick="() => DeleteTicket(ticket.IdTicket)">
                            <img src="/custom-icons/trash3.svg" alt="Delete Ticket" />
                        </button>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
@if (_displayTicketDetailsDialog)
{
    <DetailsTicket OnCancel="@CloseDetailsDialog" TicketTarget="@_ticketTarget"/>
}
else if (_displayAddTicketDialog)
{
    <AddTicket OnCancel="@CloseAddDialog" OnConfirm="@RefreshTicketsList"/>
}