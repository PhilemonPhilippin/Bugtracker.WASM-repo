<h3>Add a ticket</h3>
@if (_isTicketAdded)
{
    <span class="text-success">Project added successfully !</span>
}

<EditForm Model="@AddedTicket" OnValidSubmit="@SubmitAdd">
    <DataAnnotationsValidator />
    <label for="Title">
        Title: @if (_displayTitleTaken)
        {
            <span class="text-danger"> /!\ This title is already taken.</span>
        }
    </label>
    <InputText id="Title" @bind-Value="@AddedTicket.Title" class="form-control" />

    <label for="Status">
        Status:
    </label>
    <InputNumber id="Status" @bind-Value="@AddedTicket.Status" class="form-control" />

    <label for="Priority">
        Priority:
    </label>
    <InputNumber id="Priority" @bind-Value="@AddedTicket.Priority" class="form-control" />

    <label for="Type">
        Type:
    </label>
    <InputText id="Type" @bind-Value="@AddedTicket.Type" class="form-control" />

    <label for="Description">
        Description:
    </label>
    <InputText id="Description" @bind-Value="@AddedTicket.Description" class="form-control" />

    <label for="Project">
        Project:
    </label>
    <InputSelect id="Project" @bind-Value="@AddedTicket.Project" class="form-control">
        @if (_projects.Count != 0)
        {
            @foreach (ProjectModel project in _projects)
            {
                <option value="@project.IdProject">@project.Name</option>
            }
        }
    </InputSelect>
    <button type="submit" class="btn btn-success">Confirm add</button>
    <button @onclick="OnCancel" class="btn btn-primary">Cancel</button>
    <ValidationSummary />
</EditForm>