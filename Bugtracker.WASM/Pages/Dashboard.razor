@page "/"
<PageTitle>Dashboard |Bugtracker</PageTitle>

<div class="row">
    <div class="col-2">
    </div>

    <div class="col align-self-center">
        <h1 class="oi oi-home"> Dashboard</h1>
        <p class="mt-3">
            Welcome on your Dashboard.
        </p>

        @if (!_isMemberConnected)
        {
            <div class="col-2">
            </div>

            <div class="col align-self-center">
                <p class="text-danger">You are not connected. Click below to go to login page</p>
                <button class="btn btn-primary" @onclick="ToAccount">Login page</button>
            </div>

            <div class="col-2">
            </div>
        }
        else if (_myMemberModel.Role == 1)
        {
            <LimitedTicketList />
        }
        else
        {
            <p class="mt-4">Click below to either see your tickets or your projects.</p>

            <button class="btn btn-outline-primary me-2" @onclick="DisplayMyProjectsComponent" title="My projects">My Projects</button>

            <button class="btn btn-outline-primary" @onclick="DisplayMyTicketsComponent" title="My tickets">My Tickets</button>

            @if (_displayMyProjectsComponent)
            {
                <MyProjectList />
            }
            else if (_displayMyTicketsComponent)
            {
                <MyTicketList />
            }
        }
    </div>

    <div class="col-2">
    </div>
</div>

