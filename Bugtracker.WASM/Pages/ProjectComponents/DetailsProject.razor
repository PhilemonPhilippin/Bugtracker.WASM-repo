<h3 class="mt-2">Project details</h3>

@if (ProjectTarget is null)
{
    <span>Loading project...</span>
}
else
{
    <table class="table table-striped">
        <thead class="table-primary">
            <tr>
                <th>Information</th>
                <th>Project</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Id</td>
                <td>@ProjectTarget.IdProject</td>
            </tr>
            <tr>
                <td>Name</td>
                <td>@ProjectTarget.Name</td>
            </tr>
            <tr>
                <td>Description</td>
                <td>@ProjectTarget.Description</td>
            </tr>
            <tr>
                <td>Manager</td>
                <td>@manager.Pseudo</td>
            </tr>
        </tbody>
    </table>
    <button @onclick="OnCancel" class="btn btn-primary">Close</button>
}