<h3 class="mt-4">Project details</h3>

@if (ProjectTarget is null)
{
    <span>Loading project...</span>
}
else
{
    <div class="row">
        <div class="col-6">
    <table class="table table-striped mt-3">
        <thead class="table-primary">
            <tr>
                <th>Information</th>
                <th>Project</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Name</td>
                <td>@ProjectTarget.Name</td>
            </tr>
            <tr>
                <td>Description</td>
                <td>@ProjectTarget.Description</td>
            </tr>
            <tr>
                <td>Manager</td>
                <td>@manager.Pseudo</td>
            </tr>
        </tbody>
    </table>
    </div>
    </div>
    <button @onclick="OnCancel" class="btn btn-primary mt-2">Close</button>
    
}