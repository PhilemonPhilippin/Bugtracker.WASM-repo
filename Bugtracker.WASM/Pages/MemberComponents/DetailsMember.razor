
<h3 class="mt-2">Member details</h3>

@if (MemberTarget is null)
{
    <span>Loading member...</span>
}
else
{
    <table class="table table-secondary">
        <thead class="table-primary">
            <tr>
                <th>Id member</th>
                <th>Pseudo</th>
                <th>Email</th>
                <th>Firstname</th>
                <th>Lastname</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>@MemberTarget.IdMember</th>
                <th>@MemberTarget.Pseudo</th>
                <th>@MemberTarget.Email</th>
                <th>@MemberTarget.Firstname</th>
                <th>@MemberTarget.Lastname</th>
            </tr>
        </tbody>
    </table>

    <button @onclick="OnCancel" class="btn btn-primary">Close</button>
    
}