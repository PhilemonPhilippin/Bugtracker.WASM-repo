<h5>EditMember</h5>

<EditForm Model="@_MemberEditModel" OnValidSubmit="@SubmitEdit">
    <DataAnnotationsValidator/>
    <label for="Pseudo">
        Pseudo: @if (_isPseudoTaken)
        {
            <span class="text-danger"> Pseudo already taken!</span>
        }
    </label>
    <InputText id="Pseudo" @bind-Value="@_MemberEditModel.Pseudo" class="form-control"/>

     <label for="Email">
        Email: @if (_isEmailTaken)
        {
            <span class="text-danger"> Email already taken!</span>
        }
    </label>
    <InputText id="Email" @bind-Value="@_MemberEditModel.Email" class="form-control"/>

    <label for="Password">Password:</label>
    <InputText id="Password" @bind-Value="@_MemberEditModel.Password" class="form-control"/>

    <label for="Firstname">Firstname:</label>
    <InputText id="Firstname" @bind-Value="@_MemberEditModel.Firstname" class="form-control"/>

    <label for="Lastname">Lastname:</label>
    <InputText id="Lastname" @bind-Value="@_MemberEditModel.Lastname" class="form-control"/>

    <button type="submit" class="btn btn-primary">Confirm edit</button>
    <button @onclick="OnCancel" class="btn btn-primary">Cancel</button>
    <ValidationSummary/>
</EditForm>

