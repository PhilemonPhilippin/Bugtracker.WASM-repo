<h3 class="mt-4">Login form :</h3>

<div class="mt-3">
    <EditForm Model="@MemberLogin" OnValidSubmit="@SubmitLogin" class="p-4 p-md-5 border rounded-3 bg-light">
        <DataAnnotationsValidator />

        <label for="Pseudo">
            Pseudo: @if (_displayPseudoNotFound)
            {
                <span class="text-danger"> /!\ Pseudo not found.</span>
            }
            @if (_displayMemberDisabled)
            {
                <span class="text-danger"> /!\ This account has been disabled.</span>
            }
        </label>
        <InputText id="Pseudo" @bind-Value="@MemberLogin.Pseudo" class="form-control" />

        <label for="Password">
            Password: @if (_displayIncorrectPassword)
            {
                <span class="text-danger"> /!\ Incorrect Password.</span>
            }
        </label>
        <InputText type="password" id="Password" @bind-Value="@MemberLogin.Password" class="form-control" />

        <button type="submit" class="btn btn-success mt-2" title="Login">Login</button>

        <ValidationSummary />
    </EditForm>
</div>