@page "/members"
<PageTitle>Users |Bugtracker</PageTitle>

<div class="row">
    <div class="col-2">
    </div>

    <div class="col align-self-center">
        <h1 class="oi oi-people"> Users management</h1>
        <p class="mt-3">
            Welcome on the Users management page. <br />
            Here, you can manage all registered users of the application.
        </p>

        @if (!_isMemberConnected)
        {
            <p class="text-danger">You are not connected. Click below to go on Login page</p>
            <button class="btn btn-outline-primary" @onclick="ToAccount">Login page</button>
        }
        else if (_myMemberModel.Role < 4)
        {
            <p class="text-danger">You don't have the rights to access this section. You need to be Administrator or more.</p>
        }
        else
        {
            <MemberList />
        }
    </div>

    <div class="col-2">
    </div>
</div>