@page "/manager"

<PageTitle>Manager |Bugtracker</PageTitle>
<div class="row">
    <div class="col-2">
    </div>
    <div class="col align-self-center">
        <h1>Project Manager</h1>

        @if (!_isMemberConnected)
        {
            <p class="text-danger">You are not connected. Click below to go to login page</p>
            <button class="btn btn-primary" @onclick="ToAccount">Login page</button>
        }
        else
        {
            <p class="mt-5">Do you want to see the list of all projects or the list of all tickets ?</p>
            <button class="btn @((_displayProjectsComponent) ? "btn-outline-secondary" : "btn-outline-primary") mt-2 me-2" @onclick="DisplayProjectsComponent" title="All projects">List of all Projects</button>
            <button class="btn @((_displayTicketsComponent) ? "btn-outline-secondary" : "btn-outline-primary") mt-2" @onclick="DisplayTicketsComponent" title="All tickets">List of all Tickets</button>
            @if (_displayProjectsComponent)
            {
                <DisplayProjects />
            }
            else if (_displayTicketsComponent)
            {
                <DisplayTickets />
            }
        }
    </div>
    <div class="col-2">
    </div>
</div>
